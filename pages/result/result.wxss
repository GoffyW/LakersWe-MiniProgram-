page{
  width: 100%;
}
.container{
  width: 100%;
  height: 100%;
  color: #333;
  
  display: flex;
  flex-direction: column;
}
.slide-box{
  position: absolute;
  top: 0;
  width: 100%;
}
swiper-item{
  width: 100%;
}
swiper-item image{
  width: 100%;
}
.headTitle{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 20px;
  font-weight: bold;
  margin-top: 140px;
}
.schedule{
  width: 100%;
  display: flex;
  flex-direction: column;
  
  padding: 0px 10rpx 10rpx 10rpx;
  border-bottom: 1px solid #8e44ad;
}
.scheduleTime{
  margin-top: 10px;
  font-size: 30rpx;
  color: #2c3e50;
  text-align: center;
}
.scheduleContent{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.teamHC,.teamVF{
  width: 180rpx;
  height: 200rpx;
}
.imgHC,.imgVF{
  width: 180rpx;
  height: 130rpx;
  border-radius: 50%;
}
.teamName{
  font-size: 30rpx;
  width: 180rpx;
  text-align: center;
  color: #8e44ad;
}
.score{
  color: #FF3030;
  font-size: 20px;
  margin-top: -20px;
}
.care{
  margin: 0 auto;
  margin-top: 5px;
  width: 56px;
  font-size: 14px;
  background-color: #f1c40f;
  color: red;
  text-align: center;
  border: 1px red solid;
  border-radius: 5px;
}