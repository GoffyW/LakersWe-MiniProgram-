/**index.wxss**/
.laker-item{
  display: flex;
  flex-direction: row;
  height: 200rpx;
  padding-left:20rpx; 
}
.goodImg image{
  width: 200rpx;
  height: 200rpx;
  /* border: 1px solid #7928a7;   */
}
.goodInfo{
  border-bottom: 1px solid #7928a7; 
  display: flex;
  flex-direction: column;
  /* margin-left: 5px; */
  color: #333;
}
.priceAndCart{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.title{
  margin-left: 15px;
  font-size: 14px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: block;
  margin-top: 5px;
}
.price{
  color: red;
  font-size: 14px;
  margin-top: 35px;
  margin-left: 15px;
}
.addCart{
  font-size: 14px;
  margin-top: 35px; 
  margin-right: 15px;
  color: #666;
}
.addCart image{
  width: 15px;
  height: 15px;
  margin-right: 5px;
}
.toCart{
  font-size: 20px;
  background-color: #7928a7;
  width:60%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  margin-top: 10px;
  border-radius: 60rpx;
  margin-bottom: 10px;
}