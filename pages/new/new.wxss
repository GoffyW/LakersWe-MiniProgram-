.news{
  width: 95%;
  height: 100px;
  margin: 5px;
  display: flex;
  align-items: center;
}
.newslist{
  width: 100%;
  border-bottom: 1px solid #8e44ad;
}

.newsimage image{
  border-radius: 10px;
  width: 100px;
  height: 75px;
}
.info{
  display: flex;
  flex-direction: column;
  padding-right: 10rpx;
}
.info .title{
  font-size: 15px;
  margin-top: 0px;
}
.info .time{
  color: #999;
  font-size: 10px;
  margin-top: 15px;
}
.more{
  margin-top: 20px;
  width: 100%;
  height: 40px;
  background-color: #7c09d7;
  border-radius: 5px;
  text-align: center;
  line-height: 40px;
  color: #f6e423;
}

